# Configure your paths and filenames
SOURCEBINPATH=~/git/sshrc
SOURCEBIN=sshrc
DEBFOLDER=~/git/sshrc/debfolder
DEBVERSION=0.1
export DEBFULLNAME="Russell Stewart"

DEBFOLDERNAME=$DEBFOLDER-$DEBVERSION

# Create your scripts source dir
mkdir $DEBFOLDERNAME

# Copy your script to the source dir
cp $SOURCEBINPATH/$SOURCEBIN $DEBFOLDERNAME 
cd $DEBFOLDERNAME

# Create the packaging skeleton (debian/*)
dh_make -s --indep --createorig -p 'sshrc' --copyright MIT --email 'russell.s.stewart@gmail.com'

# Remove make calls
grep -v makefile debian/rules > debian/rules.new 
mv debian/rules.new debian/rules 

# debian/install must contain the list of scripts to install 
# as well as the target directory
echo $SOURCEBIN usr/bin > debian/install 

# We don't want a quilt based package
echo "1.0" > debian/source/format 

# Remove the example files
rm debian/*.ex

# Build the package.
# You  will get a lot of warnings and ../somescripts_0.1-1_i386.deb
debuild -us -uc
